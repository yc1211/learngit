<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bwie.Dao.BeanMapper">
<!-- 登陆方法	-->
<select id="login" parameterType="bean" resultType="bean">
	select username,password from student
	<where>
		<if test="username!=null and password!='' ">username=#{username}</if>
		<if test="username!=null and password!='' "> and password=#{password}</if>
	</where>
</select>
	<!-- 查询方法-->
	<select id="selet" parameterType="bean" resultType="bean">
		select username,password from student
	</select>
	<!-- 注册方法-->
	<insert id="insert" parameterType="bean">
		  insert into(username,passsword) values(#{username},#{password})
	</insert>
</mapper>